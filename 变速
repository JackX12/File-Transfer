// 获取现有计时器逻辑
let speed = 1; // 默认速度倍率
let intervalId;

// 动态启动计时器
function startDynamicTimer() {
    clearInterval(intervalId); // 清除旧的计时器
    intervalId = setInterval(() => {
        counter++;
        document.getElementById("timer").textContent = counter;
    }, 1000 / speed); // 调整速度
}

// 改变速度倍率并重新启动
function changeSpeed(newSpeed) {
    if (newSpeed > 0) {
        speed = newSpeed;
        startDynamicTimer();
    } else {
        console.error("速度必须大于 0");
    }
}

// 初始化计时器
startDynamicTimer();

// 调整速度示例：将速度倍率改为 2 倍
changeSpeed(2); // 每 0.5 秒更新一次
